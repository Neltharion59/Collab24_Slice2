[collab24_slice2_conversation_pm_l4_join]
{
	[text*]
	{
		choice = potential_member;
		screen_text = "Hello, traveler. You come from Frostfingers, right? Have you had the chance to meet my brother, the blacksmith? Yeah, that sounds like him.\n\nSee, he tried to teach some of his smithing arts, but I am cut from different cloth. I set off for the lands of the frost fae, to learn more about ice magic. Unfortunate timing, right? I ended up stuck in Thaelaen's hut here.\n\nListen, how about I join your cause? Any chance to learn more about ice magic is better than skulking around.";
		scroll_rate = 6.5;
	}
}
