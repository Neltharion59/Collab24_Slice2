[collab24_slice2_conversation_pm_l4_join]
{
	[text*]
	{
		choice = potential_member;
		screen_text = "Let me go with you.";
		scroll_rate = 6.5;
	}
}
[collab24_slice2_conversation_pm_l4_accept]
{
	[text*]
	{
		screen_text = "I'm happy to go with you.";
	}
}
[collab24_slice2_conversation_pm_l4_reject]
{
	[text*]
	{
		screen_text = "Why cannot I go with you?";
	}
}
[collab24_slice2_conversation_pm_l4_rejoin]
{
	[text*]
	{
		screen_text = "Let me go with you.";
		choice = potential_member;
	}
}
[collab24_slice2_conversation_pm_l4_disband]
{
	[text*]
	{
		screen_text = "I shall not go with you anymore.";
	}
}
[collab24_slice2_conversation_pm_l4_disband_rejoin]
{
	[text*]
	{
		screen_text = "Let us go together again.";
		choice = potential_member;
	}
}