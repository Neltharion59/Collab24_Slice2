[conv_c24_r4_fairy_trees_b4_quest_first]
{
	[text*]
	{
		activate_quest* = c24_slice_2_quest_restore_ice_trees,0;
	  b quest_dialog = true;
		screen_text = "An elephant in a glass store, are you? I leave my eyes off you for a moment, and our icy grove is shattered to pieces. Destroying Phrymallix the dragon was a noble deed, no doubt, just as finding that healing scroll for Rethoros. But you should learn to clean your own mess.\n\nHere, take this spell. Cast it upon the icy stumps left after the destroyed trees. It will restore the trees to their former beauty. Come find me when all trees have been restored.";
	}
}
[conv_c24_r4_fairy_trees_b4_quest_next]
{
