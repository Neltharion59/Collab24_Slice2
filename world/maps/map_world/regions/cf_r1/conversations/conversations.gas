[conversation_rhut_join]
{
	[text*]
	{
		choice = potential_member;
		sample = s_v_cf_rhut1;
		screen_text = "So we've retaken this worthless pile of sticks, what of it, eh? 'Ave any of us seen so much as a gold piece since this mess started? Not bloody likely! I'm sick o' bleeding for spit! Tell you what. You come up with a nice sum, I'll show this dunghill my backside, and Rhut will work for you from now on. What do you think?";
	}
}
