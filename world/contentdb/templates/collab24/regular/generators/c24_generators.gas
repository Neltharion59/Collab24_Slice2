[t:template,n:generator_base_breakable_wood]  // = base_breakable_wood, but derived from generator
{
	specializes = generator;

	doc = "Base template for breakable wood generators.";
	[aspect]
	{
		is_usable = false;
		life_state = ls_alive_conscious;
		is_collidable = TRUE;
		life = 1;
		material = wood;
		max_life = 1;
		voice:die:	* = s_e_env_break_container_wood;
		megamap_icon = <none>;	
	}
	[physics]
	{
		//break_sound = s_e_IH_break_wood_solid;
		[break_particulate]
		{
			frag_glb_wood_01 = 2;
			frag_glb_wood_02 = 2;
			frag_glb_wood_03 = 2;
			frag_glb_wood_04 = 2;
		}
	}
}

